<resources>
    <style name="TabDefaultText">
        <item name="android:textColor">@drawable/color_tab_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:padding">@dimen/padding_5dp</item>
    </style>

    <style name="FlowDefaultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:paddingLeft">@dimen/padding_10dp</item>
        <item name="android:paddingRight">@dimen/padding_10dp</item>
        <item name="android:layout_margin">@dimen/margin_5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_5dp</item>
        <item name="android:paddingBottom">@dimen/padding_5dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bg_textview</item>
    </style>
</resources>
